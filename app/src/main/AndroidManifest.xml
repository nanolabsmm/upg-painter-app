<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nanolabs.upgpainter" >
 <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/upg_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme" >
        <activity
            android:theme="@style/bottom_nav"
            android:name=".ui.activities.MainBottomNavigationActivity"
            android:label="@string/title_activity_main_bottom_navigation" >
        </activity>
        <activity android:name=".ui.activities.CompanyRegisterActivity" />
        <activity android:name=".ui.activities.PersonalRegisterActivity" />
        <activity android:name=".ui.activities.ChooseRegisterActivity" />
        <activity android:name=".ui.activities.LoginActivity" />
        <activity android:name=".ui.activities.IntroSliderActivity" />
        <activity android:name=".ui.activities.LanuageActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.MainActivity" />
    </application>

</manifest>